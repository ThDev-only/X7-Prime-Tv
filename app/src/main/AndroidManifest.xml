		/>
	
		<activity
            android:name=".lives.FilmsActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name"
            android:exported="false"
		/>
	
		<activity
            android:name=".movies.HomeActivity"
			android:screenOrientation="landscape"
            android:label="@string/app_name"
            android:exported="false"
		/>
	
		<activity
            android:name=".movies.MovieActivity"
			android:screenOrientation="landscape"
            android:label="@string/app_name"
            android:exported="false"
		/>
	
		<activity
            android:name=".player.BDProPlayer"
            android:screenOrientation="landscape"
