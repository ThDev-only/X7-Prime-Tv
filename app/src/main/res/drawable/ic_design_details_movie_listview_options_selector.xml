<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">  

    <!-- Seletor do listView opções Para o filme [MovieActivity] 
    
    Model: (Design Selector)
    Info: "Seletor das opções do ListView options"
    Layout Responsavel: activity_movie
    Activity Responsavel: [MovieActivity]-->
    
	<item android:state_enabled="false"     
		android:drawable="@drawable/ic_design_details_movies_listview_options_unselected" />

	<item android:state_pressed="true"        
		android:drawable="@drawable/ic_design_details_movies_listview_options_selected" />

	<item android:state_selected="true"     
		android:drawable="@drawable/ic_design_details_movies_listview_options_selected" />

	<item android:state_focused="true"     
		android:drawable="@drawable/ic_design_details_movies_listview_options_selected" />

</selector> 
