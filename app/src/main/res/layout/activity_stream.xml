<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="fill_parent"
     android:layout_width="fill_parent">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:visibility="visible"
         android:id="@+id/activity_stream_exoPlayerView" />

    <TextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginBottom="10dp"
         android:layout_marginEnd="10dp"
         android:alpha="0.5"
         android:textSize="18dp"
         android:textColor="#FFFFFF"
         android:layout_alignParentRight="true"
         android:layout_alignParentBottom="true"
         android:id="@+id/activity_streamTextView"
         android:text="BY BDDEV" />

    <View
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:id="@+id/activity_streamView" />

    <ListView
         android:layout_height="wrap_content"
         android:layout_width="225dp"
         android:background="#50000000"
         android:id="@+id/activity_streamListViewCategory">

    </ListView>

    <View
         android:layout_height="match_parent"
         android:layout_width="1dp"
         android:background="?android:attr/dividerHorizontal"
         android:layout_toRightOf="@id/activity_streamListViewCategory"
         android:id="@+id/activitystreamViewDivisor" />

    <ListView
         android:layout_height="wrap_content"
         android:layout_width="240dp"
         android:background="#50000000"
         android:layout_toRightOf="@id/activitystreamViewDivisor"
         android:id="@+id/activity_streamListViewChannels">

    </ListView>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_centerInParent="true"
         android:id="@+id/activity_streamLinearLayout">

        <ProgressBar
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:id="@+id/activity_streamProgressBar" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textColor="#FFFFFFFF"
             android:layout_marginStart="5dp"
             android:text="Carregando..."
             android:layout_gravity="center" />

    </LinearLayout>

</RelativeLayout>